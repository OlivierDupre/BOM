<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.gouv.agriculture.test</groupId>
    <artifactId>bom</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <packaging>pom</packaging>

    <scm>
        <connection>scm:svn:https://scm.rmap.auzeville.agri/o2/bom/trunk</connection>
    </scm>

    <repositories>
        <repository>
            <!-- Release -->
            <id>Work-Rec</id>
            <name/>
            <url>https://repos-rec.forge.agriculture/repository/o2-work/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <!-- Deploy SNAPSHOT -->
            <id>Private-Rec</id>
            <name />
            <url>https://repos-rec.forge.agriculture/repository/o2-private/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
            
    <distributionManagement>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>Work-Rec</id>
            <name>Rec-Release Repository</name>
            <url>dav:https://repos-rec.forge.agriculture/repository/o2-work/</url>
            <layout>default</layout>
        </repository>

        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>Private-Rec</id>
            <name>Rec-Snapshot Repository</name>
            <url>dav:https://repos-rec.forge.agriculture/repository/o2-private/</url>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>

    <profiles>
        <profile>
            <id>angular-api</id>
            <modules>
                <module>angular/angular-api</module>
                <module>bom-commons</module>
                <module>bom-angular</module>
            </modules>
        </profile>
        <profile>
            <id>angular-impl</id>
            <modules>
                <module>angular/angular-impl</module>
                <module>bom-commons</module>
                <module>bom-angular</module>
            </modules>
        </profile>
        <profile>
            <id>jsf-api</id>
            <modules>
                <module>jsf/jsf-api</module>
                <module>bom-commons</module>
                <module>bom-jsf</module>
            </modules>
        </profile>
        <profile>
            <id>jsf-impl</id>
            <modules>
                <module>jsf/jsf-web</module>
                <module>bom-commons</module>
                <module>bom-jee</module>
            </modules>
        </profile>
        <profile>
            <id>commons-api</id>
            <modules>
                <module>commons/commons-api</module>
                <module>bom-commons</module>
            </modules>
        </profile>
        <profile>
            <id>commons-impl</id>
            <modules>
                <module>commons/commons-web</module>
                <module>bom-commons</module>
            </modules>
        </profile>
    </profiles>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <updateDependencies>false</updateDependencies>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-webdav-jackrabbit</artifactId>
                <version>2.6</version>
            </extension>
        </extensions>
    </build>
</project>
